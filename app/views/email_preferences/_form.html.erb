<!-- section -->
<div class="section-p-md">
  <div class="container-fluid">
    <div class="row">

      <!-- account settings -->
      <div class="col-12">

        <%= form_for @participant,
                     url: {action: :update, controller: :email_preferences},
                     html: {
                         class: 'form-rg',
                         data: {controller: 'email-preferences'}
                     } do |f| %>
          <%= render "shared/error_messages", target: @participant %>

          <div class="form-check">
            <%= f.check_box :agreed_to_marketing, class: "form-check-input" %>
            <label class="form-check-label" for="newsletterEmails">
              Receive the AIcrowd Newsletter
            </label>
          </div>

          <div class="mt-5 mb-5">
            <i>More Notification Settings Coming Soon!</i>
          </div>

          <div class="btn-set" aria-hidden="true">
            <%= f.button 'Update', type: 'submit', class: 'btn btn-primary' %>
            <%= link_to 'Cancel', edit_participant_registration_path, class: 'btn btn-secondary' %>
          </div>

        <% end %>

      </div>
      <!-- /account settings -->

    </div>
  </div>
</div>
<!-- /section -->
